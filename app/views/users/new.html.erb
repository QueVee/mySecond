<% provide(:title, 'Sign up') %>
  <h1>Sign up</h1>

<%= form_for @user do |f| %>

	<% if @user.errors.any? %>
	  <div id="error_explanation">
		  	<h2>
		  		<%= pluralize(@user.errors.count, "error") %>
	prohibited
	        this item from being saved:
	       </h2>
	  <ul>
		  <% @user.errors.full_messages.each do |msg| %>
		  	<li><%= msg %></li>
		  <%end %>
		</ul>
	<% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.submit 'Create my account' %> | <%= link_to 'Maybe not now', welcome_index_path %>
<% end %>


	