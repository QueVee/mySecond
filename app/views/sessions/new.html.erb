<% provide(:title, 'Sign in') %>
  <h1>Sign in</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <p>
  <%= f.label :email %>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </p>
  <%= f.submit 'Sign in' %>
<% end %>
<br />
<p>New user? <%= link_to 'Sign up now!', signup_path %></p>
