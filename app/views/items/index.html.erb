<h1>Item List</h1>

<table>
	<tr><th>Item</th><th>Decription</th><th>Due Date</th></tr>
	<% @items.each do |item| %>
	  <tr>
	  	<td><%= link_to item.name, item %></td>
	  	<td><%= item.description%></td>
	  	<td><%= item.ends_on %></td>
	  	<td><%= link_to 'Edit', edit_item_path(item) %></td>
	  	<td><%= link_to 'Delete', item_path(item),
	  	        method: :delete,
	  	        data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
</table>
<br/>
<%= link_to 'Add a new item', new_item_path %>