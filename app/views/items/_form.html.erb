<% provide(:title, 'Item') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for @item do |f| %>
      <%= render 'shared/error_item_messages' %>

			<%= f.label :name, 'Item name' %>
			<%= f.text_field :name, class: 'form-control' %>
		  
			<%= f.label :description %>
			<%= f.text_area :description, class: 'form-control' %>
		  
			<%= f.label :ends_on, 'Due date' %>
			<%= f.date_field :ends_on, class: 'form-control' %>
		  <br />
			<%= f.submit %>  |  <%= link_to 'Cancel', items_path %>  
		  
		<% end %>
	</div>
</div>
